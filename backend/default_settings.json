{
  "required_placeholders": ["context"],
  "system_prompt_template_file": "backend/prompts/system_prompt.md",
  "system_prompt_templates_files": {
    "admin": "backend/prompts/system_prompt_admin.md",
    "redactor": "backend/prompts/system_prompt_staff.md",
    "support": "backend/prompts/system_prompt_staff.md",
    "client": "backend/prompts/system_prompt.md",
    "anonymous": "backend/prompts/system_prompt.md"
  },
  "llm": {
    "model": "",
    "timeout_s": 180,
    "temperature": 0.2,
    "max_tokens": 800
  },
  "retrieval": {
    "mode": "bm25",
    "k_default": 8,
    "max_citations": 8,
    "max_images": 6,
    "doc_priority_boost": 0.0,
    "heading_boost": 0.0,
    "mmr": {
      "enabled": true,
      "lambda": 0.8,
      "candidates": 80,
      "use_embeddings": true
    },
    "expand": {
      "neighbors": 1,
      "max_chars": 4200,
      "include_images": false
    },
    "tool_calls": {
      "enabled": true,
      "max_calls": 12
    },
    "summary": {
      "enabled": true,
      "model": "qwen3-vl-4b",
      "max_input_chars": 6000,
      "max_output_tokens": 280,
      "unit_max_tokens": 900,
      "k": 12,
      "max_pages": 20
    },
    "dedupe": {
      "max_per_page": 3,
      "max_per_doc": 12
    },
    "hybrid": {
      "rrf_k": 60,
      "bm25_weight": 1.0,
      "embedding_weight": 0.6,
      "bm25_candidates": 120,
      "embedding_candidates": 120
    },
    "doc_priority": [
      "luxriot-evo-global-administration-guide",
      "luxriot-evo-monitor",
      "luxriot-evo-standalone",
      "luxriot-evo-global-installation-guide",
      "luxriot-evo-s-installation-guide",
      "luxriot-evo-monitor-http-api"
    ]
  },
  "web": {
    "enabled": true,
    "timeout_s": 15,
    "max_bytes": 1000000,
    "max_chars": 20000,
    "max_urls_per_message": 2,
    "search_k": 5
  },
  "docs_style": {
    "heading_font": "sans",
    "body_font": "sans"
  }
}
